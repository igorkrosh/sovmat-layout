include pug/mixins.pug

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        include pug/head.pug
    body
        +Navbar()
        section.main
            .container
                +Sidebar()
                .container
                    .slider__wrapper
                        .slider.owl-carousel
                            .slider__item
                                img(src="assets/images/slider/1.jpg", alt="")
                                .wrapper
                                    .item__title 
                                        span Доставка песка, щебня, грунта чернозёма, гравия, глины и других сыпучих материалов
                                    button.btn.orange.big(modal="modalForm") Расчитать стоимость
